package com.chinaops.web.agent.service;

import java.util.List;

import com.chinaops.web.agent.dao.AgentDaoImpl;
import com.chinaops.web.agent.entity.Agent;
import com.chinaops.web.agent.entity.Page;

public class AgentService {
	
	private AgentDaoImpl agentDaoImpl;

	public AgentDaoImpl getAgentDaoImpl() {
		return agentDaoImpl;
	}

	public void setAgentDaoImpl(AgentDaoImpl agentDaoImpl) {
		this.agentDaoImpl = agentDaoImpl;
	}
	
	/**
	 * Description: 获取所有agent
	 * @Version 1.0 2013-8-20 上午10:05:57崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @return
	 */
	public List<Agent> getAllAgents(){
		return this.agentDaoImpl.getAllAgents();
	}
	
	/**
	 * Description: 根据操作系统类型和位数来查询agent
	 * @Version 1.0 2013-8-20 上午10:06:13崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param ostype
	 * @param arch
	 * @return
	 */
	public List<Agent> getAgentsByOstypeArch(String ostype, String arch){
		return this.agentDaoImpl.getAgentsByOstypeArch(ostype, arch);
	}
	
	public Page getAgentsByPage(String ostype, String arch,String status,int pageNo,int pageSize){
		return this.agentDaoImpl.getAgentsByPage(ostype, arch,status,pageNo,pageSize);
	}
	
	/**
	 * Description: 创建
	 * @Version 1.0 2013-8-20 上午10:14:35崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param agent
	 */
	public void createAgent(Agent agent){
		this.agentDaoImpl.create(agent);
	}
	
	/**
	 * Description: 修改
	 * @Version 1.0 2013-8-20 上午10:14:51崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param agent
	 */
	public void updateAgent(Agent agent){
		this.agentDaoImpl.update(agent);
	}
	
	/**
	 * Description: 根据id删除
	 * @Version 1.0 2013-8-20 上午10:19:45崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param id
	 */
	public void deleteAgent(Integer id){
		this.agentDaoImpl.deleteAgent(id);
	}
	
	/**
	 * Description: 根据id查询
	 * @Version 1.0 2013-8-20 上午10:19:55崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param id
	 * @return
	 */
	public Agent getAgentById(int id){
		return this.agentDaoImpl.getByPk(id);
	}
}
