package com.chinaops.web.agent.service;

import java.util.List;

import com.chinaops.web.agent.dao.FileDaoImpl;
import com.chinaops.web.agent.entity.File;
import com.chinaops.web.agent.entity.Page;

public class FileService {
	private FileDaoImpl fileDaoImpl;

	public FileDaoImpl getFileDaoImpl() {
		return fileDaoImpl;
	}

	public void setFileDaoImpl(FileDaoImpl fileDaoImpl) {
		this.fileDaoImpl = fileDaoImpl;
	}
	/**
	 * Description: 获取所有file
	 * @Version 1.0 2013-8-20 上午10:05:57崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @return
	 */
	public List<File> getAllFiles(){
		return this.fileDaoImpl.getAllFiles();
	}
	
	/**
	 * Description: 根据操作系统类型和位数来查询file
	 * @Version 1.0 2013-8-20 上午10:06:13崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param ostype
	 * @param arch
	 * @return
	 */
	public List<File> getFilesByOstypeArch(String ostype, String arch){
		return this.fileDaoImpl.getFilesByOstypeArch(ostype, arch);
	}
	
	/**
	 * Description: 分页查询
	 * @Version 1.0 2013-8-27 下午04:31:03崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param ostype
	 * @param arch
	 * @param pageNo
	 * @param pageSize
	 * @return
	 */
	public Page getFilesByPage(String ostype, String arch,String status,int pageNo,int pageSize){
		return this.fileDaoImpl.getFilesByPage(ostype, arch,status,pageNo,pageSize);
	}
	
	/**
	 * Description: 创建
	 * @Version 1.0 2013-8-20 上午10:14:35崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param agent
	 */
	public void createFile(File file){
		this.fileDaoImpl.create(file);
	}
	
	/**
	 * Description: 修改
	 * @Version 1.0 2013-8-20 上午10:14:51崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param agent
	 */
	public void updateFile(File file){
		this.fileDaoImpl.update(file);
	}
	
	/**
	 * Description: 根据id删除
	 * @Version 1.0 2013-8-20 上午10:19:45崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param id
	 */
	public void deleteFile(Integer id){
		this.fileDaoImpl.deleteFile(id);
	}
	
	/**
	 * Description: 根据id查询
	 * @Version 1.0 2013-8-20 上午10:19:55崔万哲(cuiwanzhe@china-ops.com) 创建
	 * @param id
	 * @return
	 */
	public File getFileById(int id){
		return this.fileDaoImpl.getByPk(id);
	}
}
