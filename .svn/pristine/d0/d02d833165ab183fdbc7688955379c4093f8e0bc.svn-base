<script type="text/javascript">
	contextPath = "<%=request.getContextPath()%>";
	function login(){
		var username = $("#username").val();
		var password = $("#password").val();
		$.ajax({
			type: "POST",
			url: contextPath  + "/login.do",
			data:{username:username,password:password},
			success: function(obj) {
				if(obj==0){
					alert("用户名或者密码错误请重新输入。");
					window.location.href = contextPath;
				}else if(obj==1){
					window.location.href = "jsp/agent_file_list.jsp";
					//window.location.href = "jsp/agent_file_list.jsp?old_ostype=0&old_arch=0&old_status=00&agentPageNum=1&filePageNum=1";
				}else{
					alert("没有该用户。");
					window.location.href = contextPath;
				}
			},
			dataType : "json"
		});	
	}
	function keyDown(event){
		if(event.keyCode==13){//Ctrl + Enter 有效
			login();
		}
	}
	function fox(){
		document.all.username.focus();
	}
</script>


